name: Node CI

on:
  push:
    branches:
      - main
  pull_request:
    branches:
      - main

jobs:
  build:
    runs-on: ubuntu-latest

    strategy:
      matrix:
        node-version: [18.x, 20.x]

    steps:
      - name: Checkout repository
        uses: actions/checkout@v3

      - name: Setup Node.js
        uses: actions/setup-node@v3
        with:
          node-version: ${{ matrix.node-version }}

      - name: Install dependencies
        run: npm install

      #- name: Run linter
      #  run: npm run lint

      - name: Build frontend
        run: npm run build

      # SonarCloud
      - name: SonarCloud Scan
        uses: SonarSource/sonarcloud-github-action@v2
        with:
           projectBaseDir: .
           extraProperties: |
             sonar.organization=kat-in
             sonar.projectKey=kat-in_frontend-project-12
        env:
           SONAR_TOKEN: ${{ secrets.SONAR_TOKEN }}
